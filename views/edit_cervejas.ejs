<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>Prema</title>
</head>
<body>

    <h3>Modificar:</h3>
    <form action="/edit_cervejas.html/edit" method="POST" name="form_moficacao">
      <input type="text" placeholder="ID a modificar" name="modify_id">
      <select name="elemento_a_modificar">
        <option value="tipo">Tipo</option>
        <option value="nome">Nome</option>
        <option value="marca">Marca</option>
        <option value="garrafa">Garrafa</option>
      </select>
      <input type="text" placeholder="Novo valor" name="novo_valor">
      <button type="submit">Submit</button>
    </form>

  <h1> Produtos cadastrados: </h1>
  <ul class="produtos">
    <% for(var i = 0; i < cursor.length; i++) {%>
        <li class=produto>
            <span> | ID: <%=cursor[i]._id %> </span>
            <span>| Nome: <%=cursor[i].nome %> </span>
            <span>| Marca: <%=cursor[i].marca %> </span>
            <span>| Tipo: <%=cursor[i].tipo %> </span>
            <span>| Garrafa: <%=cursor[i].garrafa %> </span>
        </li>
    <% } %>
  </ul>
  
   <form action="/edit_cervejas.html/remover" method="POST">
    <input type="text" placeholder="ID a deletar" name="delete_id">

    <button type="submit">Deletar</button>
  </form>
  


</body>
</html>